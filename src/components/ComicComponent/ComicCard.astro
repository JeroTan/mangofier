---
import { Image } from 'astro:assets';
import { pathTranslatorQ } from 'src/i18/utils';
import type { COMIC_CONCISE_DATA } from 'src/structure/comicCollector'

interface Props{
  comic: COMIC_CONCISE_DATA,
}
const { comic } = Astro.props;
const t = pathTranslatorQ(Astro.url);
---

<astro-comic-card>
  <a href={t(`/comic/detail/${comic.id}`)} class="block h-full w-64 relative group cursor-pointer">
    <div class="w-full h-80 bg-slate-700 relative rounded border border-(--color-primary) overflow-hidden group-hover:outline group-hover:outline-(--color-primary) group-hover:shadow-(--color-primary)">
      <Image src={comic.imageUrl} alt={comic.title} loading="lazy" width={100} height={100} class="image object-cover" />
    </div>
    <div>
      <h2 class="pt-1 pb-1 group-hover:text-(--color-primary)">
        {comic.title}
      </h2>
    </div>
  </a>
</astro-comic-card>