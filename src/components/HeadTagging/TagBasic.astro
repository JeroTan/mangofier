---
interface Props{
  title?: string,
  description?: string,
  author?: string,
  authorHandle?: string,
  baseUrl?: string,
  pathUrl?: string,
  keywords?: (string|number)[],
  published?: string,

}

const {
  title ="ManGoFier",
  description = "ManGoFier - Your Ultimate Manga and Comic Reader",
  author = "Jerowe",
  authorHandle = "@jerowe.tan99",
  baseUrl =  Astro.url.origin,
  pathUrl = "/newsroom/author",
  keywords = [],
  published = "2025-04-01",
} = Astro.props;
---

<meta name="pagetitle" content={title}>
<meta name="description" content={description} />
<meta name="theme-color" content="#fff">
<meta name="author" content={author}>
{authorHandle ? <meta property="article:author" content={`${baseUrl}${pathUrl}/${authorHandle}`}> :""}
<meta name="keywords" content={keywords.join(", ")}>
{published ? <meta property="article:published_time" content={new Date(published).toISOString()}>:""}