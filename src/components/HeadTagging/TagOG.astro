---
interface Props {
  baseUrl?: string,
  description?: string,
  locale?: string,
}
const {
  baseUrl = Astro.url.origin,
  description = "Nana Pool Villa is a luxurious retreat offering private pool villas in the heart of the city. Experience unparalleled comfort and relaxation with top-notch amenities and personalized service.",
} = Astro.props;

const path = Astro.url.pathname;
function isPage(conditionPath:string){
  // const regexString = `^${conditionPath}(?:[\\/?#].*)?$`;
  const regexString = `${conditionPath}`;
  return new RegExp(regexString, "gm").test(path)
}

---

<meta property="og:type" content={`${isPage("/newsroom") ? "article" : "website"}`} />
<meta property="og:site_name" content="Nana Pool Villa" />
<meta property="og:url" content={`${baseUrl}${Astro.url.pathname}`}>
<meta property="og:description" content={description}>
<meta property="og:image" content={`${baseUrl}images/nana-pool-villa.png`}>
<meta property="og:locale" content="en_US" />