const AllowedCookiesData = Astro.cookies.has("MGF_ALLOW_COOKIES");
let isAllowed = true;
if(AllowedCookiesData){
  if(Astro.cookies.get("MGF_ALLOW_COOKIES")!.value == "true"){
    isAllowed = true;
  }else{
    isAllowed = false;
  }
}
isAllowed;
