---
interface Props {
  keywords?: (string|number)[]
}
const commonKeyword = [
  "mangofier", 
  "manga", 
  "comic", 
  "webtoon", 
  "read manga online", 
  "read comic online", 
  "webtoon online", 
  "manga reader", 
  "comic reader", 
  "webtoon reader"
];

const { keywords } = Astro.props;

---
<meta name="keywords" content={`${keywords && keywords.length > 0 ? keywords.join(",") + "," : ""}${commonKeyword.join(",")}`} />