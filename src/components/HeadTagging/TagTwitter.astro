---
interface Props {
  baseUrl?: string,
  title?:string,
  description?: string,
}

const {
  baseUrl = Astro.url.origin,
  title = "ManGoFier",
  description = "ManGoFier - Your Ultimate Manga and Comic Reader",
} = Astro.props;
---

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@mangofier">
<meta name="twitter:url" content={`${baseUrl}${Astro.url.pathname}`}>
<meta name="twitter:title" content={title}>
<meta name="twitter:description" content={description}>
<meta name="twitter:image" content={`${baseUrl}/#`}>