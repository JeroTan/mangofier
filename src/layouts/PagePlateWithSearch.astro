---
import type { PAGE_TYPE } from 'src/structure/Page';
import PagePlate from './PagePlate.astro';
import NavbarSearch from '@components/Header/NavbarSearch.astro';


interface Props {
  title?: string,
  noHeader?: boolean,
  noFooter?: boolean,
  breadCrumb?: Array<{title:string, url:string|null}>,
  noContainer?: boolean,
  clean?: boolean,
  inClass?: string,
  expectedHeight?: string,
  prefetch?: string[],
  pageMicrodataScope?: string,

  descriptor?:{
		title?: string,
		published?: string,
		author?: string,
		authorHandle?: string,
		keywords?: Array<string|number>,
		description?: string,
		type?: PAGE_TYPE,
		thumbnail?: string,
    locale?: string,
    faqData?: Array<{
      id: string,
      question: string,
      answer: string,
    }>
	}
}

const {
  title = "Nana Pool Villa",
  noHeader = false,
  noFooter = false,
  breadCrumb,
  noContainer = false,
  clean = false,
  expectedHeight = "50vh",
  inClass = "",
  prefetch,
  descriptor,
  pageMicrodataScope = "https://schema.org/WebPage",
} = Astro.props;


---

<PagePlate 
  title={title} 
  noHeader={true} 
  noFooter={noFooter} 
  breadCrumb={breadCrumb} 
  noContainer={noContainer} 
  clean={clean} 
  expectedHeight={expectedHeight} 
  inClass={inClass} 
  prefetch={prefetch} 
  pageMicrodataScope={pageMicrodataScope}
  descriptor={descriptor}
>
  <Fragment slot="header">
    {clean?"":<>
      {noHeader ? "":<>
        <NavbarSearch />
      </>}
    </>}
  </Fragment>
  <slot />
</PagePlate>